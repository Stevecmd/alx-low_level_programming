# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean fclean oclean re

# Default rule
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Compile source files to object files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Ensure object files are recompiled if header changes
$(OBJ): m.h

# Cleaning rules
clean:
	$(RM) $(NAME) *~ \#*\# *.swp *.swo

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all
