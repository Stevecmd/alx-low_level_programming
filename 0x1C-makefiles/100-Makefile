# Compiler
CC = gcc

# Source files
SRC = main.c file1.c file2.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default rule: build the executable
all: $(NAME)

# Compile only updated source files
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Clean Emacs, Vim, and executable files
clean:
	$(RM) *~ $(NAME)

# Clean object files
oclean:
	$(RM) $(OBJ)

# Clean everything
fclean: clean oclean

# Force recompilation of all source files
re: fclean all

# Rule to compile .c files into .o files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Ensure m.h header file exists
$(OBJ): m.h

.PHONY: all clean oclean fclean re
