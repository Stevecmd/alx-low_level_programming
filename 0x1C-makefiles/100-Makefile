# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile .c files to .o files
main.o: main.c m.h
	$(CC) -c main.c -o main.o $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c -o school.o $(CFLAGS)

# Cleaning rules
clean:
	rm -f $(NAME) *~ \#*\# *.swp *.swo

oclean:
	rm -f $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
