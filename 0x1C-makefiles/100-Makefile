# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files (derived from source files)
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile .c files to .o files
$(OBJ): %.o : %.c m.h
	@gcc -c $< $(CFLAGS) -o $@

# Cleaning rules
clean:
	@$(RM) $(NAME) *~ \#*\# *.swp *.swo

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
