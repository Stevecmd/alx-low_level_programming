# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default rule
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rules to compile .c files to .o files
main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c $(CFLAGS)

# Cleaning rules
clean:
	$(RM) $(NAME) *~ \#*\# *.swp *.swo

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
