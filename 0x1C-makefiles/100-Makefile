# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files
OBJ = main.o school.o

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile .c files to .o files without using %.o: %.c
main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS) -o main.o

school.o: school.o m.h
	$(CC) -c school.c $(CFLAGS) -o school.o

# Cleaning rules
clean:
	$(RM) $(NAME)
	$(RM) *~ \#*\# *.swp *.swo

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
