# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files (derived from source files)
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile .c files to .o files
compile_obj = $(CC) -c $< $(CFLAGS) -o $@

main.o: main.c m.h
	$(compile_obj)

school.o: school.c m.h
	$(compile_obj)

# Cleaning rules
clean:
	$(RM) $(NAME) *~ \#*\# *.swp *.swo

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
