# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(LINK.o) $^ -o $@

# Compile .c files to .o files without using %.o: %.c
main.o: main.c m.h
	$(COMPILE.c) -o $@

school.o: school.c m.h
	$(COMPILE.c) -o $@

# Cleaning rules
clean:
	rm -f $(NAME) *~ \#*\# *.swp *.swo

oclean:
	rm -f $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
