# Variables
CC = gcc

# Source files
SRC = main.c school.c

# Object files (derived from source files)
OBJ = main.o school.o

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(LINK.o) $^ -o $@

# Compile .c files to .o files
main.o: main.c m.h
	$(COMPILE.c) -o $@

school.o: school.c m.h
	$(COMPILE.c) -o $@

# Cleaning rules
clean:
	$(RM) $(NAME) *~ \#*\# *.swp *.swo

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Rule to force recompilation
re: fclean all

.PHONY: all clean oclean fclean re
